{
  // 拓展 tsconfig.json 的配置

  "compilerOptions": {
    "noEmit": false,
    // 允许生成文件
    "declaration": true,
    // 需要设置为 true 来支持类型
    "emitDeclarationOnly": true,
    // 只生成类型文件
    "declarationDir": "lib",
    // 类型文件的导出目录
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts"
  ]
}